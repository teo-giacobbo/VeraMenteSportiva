@using VeraMente_Sportiva.Models

@{ 
    CalendarioViewModel ultimaPartita = ViewBag.UltimaPartita;
    CalendarioViewModel prossimaPartita = ViewBag.ProssimaPartita;
}

<script>

    $(document).ready(function () {
        focusSection("Home");

        $("#sectionChampionship").mouseover(function () {
            checkSubmenuChampionship(1);
        });

        $("#sectionChampionship").mouseout(function () {
            checkSubmenuChampionship(0);
        });

        $("#submenuChampionship").mouseover(function () {
            checkSubmenuChampionship(1)
        });

        $("#submenuChampionship").mouseout(function () {
            checkSubmenuChampionship(0)
        });
    });

    var check = "";
    function checkSubmenuChampionship(isEnter) {
        if (isEnter == 1) {
            $("#submenuChampionship").show();
            check = "Championship";
        } else {
            check = "";
            setTimeout(function () {
                if (check == "") {
                    $("#submenuChampionship").hide();
                }
            }, 100);
        }
    }

</script>

