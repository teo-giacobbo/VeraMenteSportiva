    }

    .news {
        width: 32%;
        height: 100%;
        background-color: var(--bg-secondary-color);
        -webkit-box-shadow: 0 8px 12px -4px var(--text-shadow);
        box-shadow: 0 8px 12px -4px var(--text-shadow);
        border-radius: 1vmin;
        padding: 10px;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    .moreNews {
        width: 100%;
        height: 2%;
        margin-top: 2vmin;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        text-decoration: underline;
        animation: 0.7s ease-out 0s 1 slideFromRight;
    }

    @@media (min-width: 320px) and (max-width: 480px) {

        .matchPrev {
            display: none;
        }

        .championship {
            display: none;
        }

        .matchNext {
            width: 100%;
        }

        .match {
            padding: 2px;
        }

        .matchDetails {
            width: 100%;
        }

        .matchTitle {
            font-size: 12px !important;
        }

        .team .sizeMedium {
            font-size: 13px;
        }

        .containerNews {
            height: auto;
            flex-wrap: wrap;
        }

        .news {
            width: 100%;
            height: 30vmin;
            margin-bottom: 2vmin;
        }
