<script>

    $(document).ready(function () {
        focusSection("Campionati");
        attivaLoading();
    });

    function apriSezioneSquadra(sezione) {
        attivaLoading();
        $(".sectionTeams").removeClass("sectionTeamSelected");
        $("#sectionTeams" + sezione).addClass("sectionTeamSelected");

        $("#mainInfoTeam").html("");
        $("#mainInfoTeam").load("../Campionati/" + sezione + "?campionato=" + "@ViewBag.Campionato");
    }

</script>

<style>
    .titleTeam {
        width: 100%;
        text-align: center;
    }

    .sectionsTeam {
        width: 100%;
        margin-top: 2vmin;
        border-bottom: 1px solid var(--text-color);
        /* padding: 10px 0; */
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        /* align-items: center; */
    }

    .sectionTeamSelected {
        color: var(--bg-color);
        background-color: var(--text-color);
        padding: 5px 15px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .mainInfoTeam {
        width: 100%;
    }

    @@media (min-width: 320px) and (max-width: 480px) {
        .titleTeam {
            font-size: 20px !important;
        }

        .sectionsTeam {
            margin-top: 4vmin;
        }

        .sectionTeams {
            font-size: 14px !important;
        }
    }
</style>

<div class="titleTeam sizeBig weight900">
    @if (ViewBag.Campionato == "1DM")
    {
        <span>Prima Divisione Maschile</span>
    }
    else if (ViewBag.Campionato == "PGSF")
    {
        <span>PGS Libera Femminile</span>
    }
    else if (ViewBag.Campionato == "MV")
    {
        <span>Mini Volley</span>
    }
</div>

<div class="sectionsTeam">
    <div id="sectionTeamsSquadra" class="sectionTeams cursorClick sizeMediumSmall weight300 hoverOrange sectionTeamSelected" onclick="apriSezioneSquadra('Squadra')">Squadra</div>
    <div id="sectionTeamsCalendario" class="sectionTeams cursorClick sizeMediumSmall weight300 hoverOrange" onclick="apriSezioneSquadra('Calendario')">Calendario</div>
    <div id="sectionTeamsClassifica" class="sectionTeams cursorClick sizeMediumSmall weight300 hoverOrange" onclick="apriSezioneSquadra('Classifica')">Classifica</div>
</div>

<div id="mainInfoTeam" class="mainInfoTeam">
    @Html.Action("Squadra", "Campionati", new { campionato = ViewBag.Campionato })
</div>